<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TracerApp.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Tracer App" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>
        <Label Text="Please Login and Register you appointment" FontSize="12" Padding="30,10,30,10"/>

        <Button Text="Register"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="BtnClicked_Scan"
                Margin="30,10,30,10"/>
        <Button Text="Login"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="BtnClicked_Login"
                Margin="30,10,30,10"/>
        <Button Text="About"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="Center"
                Clicked="BtnClicked_Login"
                Margin="30,10,30,10"/>
    </StackLayout>
</ContentPage>
